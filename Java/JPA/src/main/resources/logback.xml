<configuration>
    <appener name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS [%thread] %-5lebel %logger{36} - [%X{requestId}] - %msg%n</pattern>
        </encoder>
    </appener>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>